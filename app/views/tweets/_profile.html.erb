<div class="column is-one-quater">
  <nav class="panel">
    <p class="panel-heading">Profile</p>
	<div class="panel-block">
	  <article class="media">
	     <figure class="media-left">
		   <p class="image is-64x64">
		     <img src="https://bulma.io/images/placeholder/64x64.png" alt="">
			</p>
		</figure>
		  <div class="media-content">
		    <div class="content">
			  <p>
			    <strong><%= tweet.user.name %></strong>
		        <small><%= tweet.user.username %></small>
			  </p>
		    </div>
		  </div>
	  </article>
	</div>

	<div class="panel-block">
	  <div class="level is-mobile">
	    <div class="level-item has-centered-text">
		  <div>
		    <p class="heading">Tweets</p>
			<p class="title is-6"><%= current_user.tweets.count%></p>
		  </div>
		</div>
		<div class="level-item has-centered-text">
		  <div>
		    <p class="heading">Following</p>
			<p class="title is-6">123</p>
		  </div>
		</div>
		<div class="level-item has-centered-text">
		  <div>
		    <p class="heading">Followers</p>
			<p class="title is-6">465k</p>
		  </div>
		</div>
	  </div>
	</div>
  </nav>
</div>